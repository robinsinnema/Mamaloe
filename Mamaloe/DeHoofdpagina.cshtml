@using WebMatrix.Data
@{
    Layout = "~/Shared/_DeHeader.cshtml";
    Page.Title = "Voorpagina";
    // zorgt voor de pagina titel en de layout.
    bool isEmpty = Request.Form["txteen"].IsEmpty() || Request.Form["txttwee"].IsEmpty();
    int een = Request.Form["txteen"].AsInt();
    int twee = Request.Form["txttwee"].AsInt();
    int drie = Request.Form["txtdrie"].AsInt();
    int result = 0;
    result = ((een * twee) * 35) + ((een * drie) * 25);
    var prijs = result;
    // berekent de prijs doormiddel van twee invoervelden. Verander 35 om de vermenevuldigingsprijs te veranderen.
}

