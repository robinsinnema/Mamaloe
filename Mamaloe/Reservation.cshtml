@using WebMatrix.Data;

@{
    Validation.RequireField("voornaam", "Voornaam is verplicht");
    Validation.RequireField("achternaam", "Achternaam is verplicht");
    Validation.RequireField("email", "Email is verplicht");
    Validation.RequireField("telefoonnummer", "Telefoonnummer is verplicht");
    Validation.RequireField("straat", "Straat is verplicht");
    Validation.RequireField("huisnummer", "Huisnummer is verplicht");
    Validation.RequireField("postcode", "Postcode is verplicht");
    Validation.RequireField("woonplaats", "Plaats is verplicht");
    Validation.RequireField("land", "Land is verplicht");
    //Validation.RequireField("incheck_datum", "Incheck datum is verplicht");
    //Validation.RequireField("uitcheck_datum", "Uitcheck datum is verplicht");
    //Validation.RequireField("aantal_personen", "Aantal personen is verplicht en mag maximaal 4 personen zijn");
    //Validation.RequireField("huisdier", "Geef aan of u een huisdier wilt meenemen");

    if (IsPost && Validation.IsValid())
    {
        if (Request.UrlReferrer.AbsolutePath == Request.Url.AbsolutePath)
        {
            Session["voornaam"] = Request.Form["voornaam"];
            Session["tussenvoegsel"] = Request.Form["tussenvoegsel"];
            Session["achternaam"] = Request.Form["achternaam"];
            Session["email"] = Request.Form["email"];
            Session["telefoonnummer"] = Request.Form["telefoonnummer"];
            Session["straat"] = Request.Form["straat"];
            Session["huisnummer"] = Request.Form["huisnummer"];
            Session["postcode"] = Request.Form["postcode"];
            Session["woonplaats"] = Request.Form["woonplaats"];
            Session["land"] = Request.Form["land"];
            Session["incheck_datum"] = Request.Form["incheck_datum"];
            Session["uitcheck_datum"] = Request.Form["uitcheck_datum"];
            Session["aantal_personen"] = Request.Form["aantal_personen"];
            Session["huisdier"] = Request.Form["huisdier"];

            Response.Redirect("~/Gegevenspage.cshtml");
        }
    }

}


