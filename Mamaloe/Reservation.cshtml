    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="display-4">Reserveren</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="">
        <div class="container">
            <div class="row">
                <div class="col-md-4 order-md-2">
                    <h4 class="d-flex justify-content-between mb-3"> <span class="text-muted">Gegevens</span> </h4>  
                    <div class="row">
                        <div id="datepicker2"></div>
                    </div> <br />
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="">Incheckdatum:<input type="text" name="incheck_datum" id="datepicker" class="form-control"></h6>
                            @Html.ValidationMessage("incheck_datum")
                        </div>
                        <div class="col-md-6"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="">Uitcheckdatum:<input type="text" name="uitcheck_datum" id="datepicker1" class="form-control"></h6>
                            @Html.ValidationMessage("uitcheck_datum")
                        </div>
                        <div class="col-md-6"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="">Huisdieren:</h6>
                                        <select name="huisdier" id="huisdier" class="form-crontrol">
                                            <option value="True">Ja</option>
                                            <option value="False">Nee</option>
                                        </select>
                                        @Html.ValidationMessage("huisdier")
                        </div>
                        <div class="col-md-6">
                            <h6 class="">Aantal personen:</h6>
                            <select name="aantal_personen" id="aantal_personen" class="form-crontrol">
                                <option value=1>1</option>
                                <option value=2>2</option>
                                <option value=3>3</option>
                                <option value=4>4</option>
                            </select>
                            @Html.ValidationMessage("aantal_personen")
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6"></div>
                        <div class="col-md-6"></div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <h5 class="">Totaal prijs:</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 order-md-1">
                    <h4 class="mb-3">Persoonlijke gegevens</h4>
                    @resultMessage
                    <form class="needs-validation" method="post"novalidate="">
                        <div class="row">
                            <div class="col-md-4 mb-3" style="">
                                <label for="firstName">Voornaam:</label>
                                <input type="text" name="voornaam"class="form-control" id="firstName" placeholder="" value="" required="">  
                                @Html.ValidationMessage("voornaam")
                            </div>
                            <div class="col-md-4 mb-3" style="">
                                <label for="tussenvoegsel">Tussenvoegsel:</label>
                                <input type="text" name="tussenvoegsel"class="form-control" id="infix" placeholder="" value="" required="">                                   
                            </div>
                            <div class="col-md-4 mb-3" style="">
                                <label for="lastName">Achternaam:</label>
                                <input type="text" name="achternaam" class="form-control" id="lastName" placeholder="" value="" required="">   
                                @Html.ValidationMessage("achternaam")
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email" contenteditable="false">Email:<span class="text-muted"></span></label>
                            <input type="email" name="email" class="form-control" id="email" placeholder="">
                            @Html.ValidationMessage("email")
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="col-md-12 mb-3">
                                    <label for="straat">Straat:</label>
                                    <input type="text" name="straat"class="form-control" id="straat" placeholder="" value="" required="">
                                    @Html.ValidationMessage("straat")
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-12 mb-3">
                                    <label for="huisnummer">Huisnummer:</label>
                                    <input type="text" name="huisnummer" class="form-control" id="huisnummer" placeholder="" value="" required="">
                                    @Html.ValidationMessage("huisnummer")
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <div class="invalid-feedback" style=""></div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="col-md-12 mb-3">
                                            <label for="woonplaats">Woonplaats:</label>
                                            <input type="text" name="woonplaats" class="form-control" id="woonplaats" placeholder="" value="" required="">
                                            @Html.ValidationMessage("woonplaats")
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-12 mb-3">
                                            <label for="postcode">Postcode:</label>
                                            <input type="text" name="postcode"class="form-control" id="postcode" placeholder="" value="" required="">
                                            @Html.ValidationMessage("postcode")
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="col-md-12 mb-3" style="">
                                            <label for="telefoon">Telefoonnummer:</label>
                                            <input type="text" name="telefoon" class="form-control" id="telefoon" placeholder="" value="" required="">
                                            @Html.ValidationMessage("telefoon")
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-12 mb-3">
                                            <label for="land">Land:</label>
                                            <input type="text" name="land" class="form-control" id="land" placeholder="" value="" required="">
                                            @Html.ValidationMessage("land")
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <label class="col-2">Opmerking:</label>
                                            <div class="col-10"><input type="text" value="" class="form-control" name="opmerking" id="form35" rows="3" placeholder="Vul hier uw eventuele opmerking"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-warning btn-lg btn-block" name="SubmitButton"type="submit">Reserveer</button>
