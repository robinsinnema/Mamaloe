@using WebMatrix.Data;
@{
    var resultMessage = "";

    Validation.RequireField("voornaam", "Voornaam is verplicht");
    Validation.RequireField("achternaam", "Achternaam is verplicht");
    Validation.RequireField("email", "Email is verplicht");
    Validation.RequireField("telefoon", "Telefoonnummer is verplicht");
    Validation.RequireField("straat", "Straat is verplicht");
    Validation.RequireField("huisnummer", "Huisnummer is verplicht");
    Validation.RequireField("woonplaats", "Plaats is verplicht");
    Validation.RequireField("postcode", "Postcode is verplicht");
    Validation.RequireField("land", "Land is verplicht");

    //Validation.RequireField("incheck_datum", "Incheck datum is verplicht");
    //Validation.RequireField("uitcheck_datum", "Uitcheck datum is verplicht");
    //Validation.RequireField("aantal_personen", "Aantal personen is verplicht");
    //Validation.RequireField("huisdier", "Huisdier wel/niet is verplicht");

    if (IsPost && Validation.IsValid())
    {
        if (DBManager.SetReservation(Request.Form["voornaam"], Request.Form["tussenvoegsel"], Request.Form["achternaam"], Request.Form["email"], Request.Form["telefoon"], Request.Form["straat"], Request.Form["huisnummer"], Request.Form["woonplaats"], Request.Form["postcode"], Request.Form["land"], Request.Form["opmerking"], Request.Form["incheck_datum"], Request.Form["uitcheck_datum"], Request.Form["aantal_personen"].AsInt(), Request.Form["huisdier"].AsBool()))
        {
            Response.Redirect("~/ReservationComplete.cshtml");
        }
        else
        {
            resultMessage = "Er is een fout opgetreden.";
        }

    }
}
