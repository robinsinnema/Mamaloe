@using WebMatrix.Data;

@{
    Layout = "~/Shared/_DeHeader.cshtml";
    Page.Title = "Reservatie";
    // zorgt voor de pagina titel en de layout.

    Validation.RequireField("voornaam", "Vorname ist erforderlich");
    Validation.RequireField("achternaam", "Nachname ist erforderlich");
    Validation.RequireField("email", "Email ist erforderlich");
    Validation.RequireField("telefoonnummer", "Telefonnummer ist erforderlich");
    Validation.RequireField("straat", "Straße ist erforderlich");
    Validation.RequireField("huisnummer", "Hausnummer ist erforderlich");
    Validation.RequireField("postcode", "Postleitzahl ist erforderlich");
    Validation.RequireField("woonplaats", "Wohnort ist erforderlich");
    Validation.RequireField("land", "Land ist erforderlich");
    Validation.RequireField("incheck_datum", "Anreisedatum ist erforderlich");
    Validation.RequireField("uitcheck_datum", "Auscheckdatum ist erforderlich");
    Validation.RequireField("aantal_volwassenen", "Anzahl der Erwachsenen ist erforderlich");
    Validation.RequireField("aantal_kinderen", "Anzahl der Kinder ist erforderlich");
    Validation.RequireField("aantal_nachten", "Anzahl der Übernachtungen  ist erforderlich.");
    Validation.RequireField("huisdier", "Geben Sie an, ob Sie ein Haustier mitbringen möchten");

    //Laat een bericht zien als een veld niet ingevuld is.

    bool isEmpty = Request.Form["aantal_nachten"].IsEmpty() || Request.Form["aantal_wolwassenen"].IsEmpty() || Request.Form["aantal_kinderen"].IsEmpty();
    int een = Request.Form["aantal_nachten"].AsInt();
    int twee = Request.Form["aantal_volwassenen"].AsInt();
    int drie = Request.Form["aantal_kinderen"].AsInt();
    int result = 0;
    result = ((een * twee) * 35) + ((een * drie) * 25);
    int prijs = result;

    if (IsPost && Validation.IsValid())
    {
        if (Request.UrlReferrer.AbsolutePath == Request.Url.AbsolutePath)
        {
            Session["voornaam"] = Request.Form["voornaam"];
            Session["tussenvoegsel"] = Request.Form["tussenvoegsel"];
            Session["achternaam"] = Request.Form["achternaam"];
            Session["email"] = Request.Form["email"];
            Session["telefoonnummer"] = Request.Form["telefoonnummer"];
            Session["straat"] = Request.Form["straat"];
            Session["huisnummer"] = Request.Form["huisnummer"];
            Session["postcode"] = Request.Form["postcode"];
            Session["woonplaats"] = Request.Form["woonplaats"];
            Session["land"] = Request.Form["land"];
            Session["opmerking"] = Request.Form["opmerking"];
            Session["incheck_datum"] = Request.Form["incheck_datum"];
            Session["uitcheck_datum"] = Request.Form["uitcheck_datum"];
            Session["aantal_volwassenen"] = Request.Form["aantal_volwassenen"];
            Session["aantal_kinderen"] = Request.Form["aantal_kinderen"];
            Session["aantal_nachten"] = Request.Form["aantal_nachten"];
            Session["huisdier"] = Request.Form["huisdier"];
            Session["prijs"] = prijs;

            Response.Redirect("~/DeGegevenspage.cshtml");
            // Vraagt de gegevens op uit de ingevoerde velden, en verwijst naar de gegevenspagina.
        }
    }

}


<!DOCTYPE html>
<html>

<head>

    <script>
        $(function () {
            $("#datepicker1").datepicker();
        });
    </script>
    <script>
        $(function () {
            $("#datepicker2").datepicker();
        });
    </script>
    <script>
        $(function () {
            $("#datepicker3").datepicker();
        });
    </script>
    @* Laat de 3 kalanders/datepickers zien. *@
</head>

<body class="bg-light">
    
    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="display-4">Reservieren</h1>
                    @* Header tekst. *@
                </div>
            </div>
        </div>
    </div>
    <div class="">
        <div class="container">
            <form class="needs-validation" method="post" novalidate="">
                <div class="row">
                    <div class="col-md-4 order-md-2">
                        <h4 class="d-flex justify-content-between mb-3"> <span class="text">Daten</span> </h4>
                        <br />
                        <div id="datepicker1"></div><br />
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="">Anreisedatum:<input name="incheck_datum" value="@Request["incheck_datum"]" type="text" id="datepicker2" class="form-control"></h6>
                                @Html.ValidationMessage("incheck_datum", new { @style = "color:red" })
                                @* Vraaggt de incheckdatum op door middel van de datepicker. *@
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-14">
                                    <h6 class="">Auscheckdatum:<input name="uitcheck_datum" value="@Request["uitcheck_datum"]" type="text" id="datepicker3" class="form-control"></h6>
                                    @Html.ValidationMessage("uitcheck_datum", new { @style = "color:red" })
                                    @* Vraaggt de checkout-datum op door middel van de datepicker. *@
                                </div>
                            </div>
                        </div>
                        <p>(Max.4 Menschen)</p>
                        @* ------------------------------------------------------------------- *@
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Erwachsene: €35 pro nacht.</h6>
                            </div>
                            <div class="col-md-6">
                                <div class="col-md-14">
                                    <h6>Kinder(0-16): €25 pro nacht.</h6>
                                </div>
                            </div>
                            @* ------------------------------------------------------------- *@
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="">Anzahl der Erwachsenen:(Max. 4)<input name="aantal_volwassenen" placeholder="max 4" value="@Request["aantal_volwassenen"]" type="number" min="1" max="4" id="" class="form-control"></h6>
                                    @Html.ValidationMessage("aantal_volwassenen", new { @style = "color:red" })
                                    @* Veld om het aantal personen in te vullen.*@
                                </div>
                                <div class="col-md-6">
                                    <h6 class="">Anzahl der Kinder:(Max. 3)<input name="aantal_kinderen" placeholder="max 3" value="@Request["aantal_kinderen"]" type="number" min="0" max="3" id="" class="form-control"></h6>
                                    @Html.ValidationMessage("aantal_kinderen", new { @style = "color:red" })
                                    @* Veld om het aantal personen in te vullen.*@
                                </div>
                                <div class="col-md-6">
                                    <h6 class="">Anzahl Übernachtungen:<input name="aantal_nachten" value="@Request["aantal_nachten"]" type="number" id="" class="form-control"></h6>
                                    @Html.ValidationMessage("aantal_nachten", new { @style = "color:red" })
                                    @* Veld om het aantal personen in te vullen.*@
                                </div>
                                <div class="col-md-6">

                                    <h6 class="">
                                        Haustier:
                                        <select name="huisdier" class="form-control">
                                            <option value="ja">Ja</option>
                                            <option value="nein">Nein</option>
                                        </select>
                                    </h6>

                                </div>
                            </div>
                        </div>
                    </div>
                        <div class="col-md-8 order-md-1">
                            <h4 class="mb-3">Persönliche Informationen</h4>
                            <div class="row">
                                <div class="col-md-4 mb-3" style="">
                                    <label for="firstName">Vorname:</label>
                                    <input type="text" name="voornaam" class="form-control" id="firstName" placeholder="" value="@Request["voornaam"]" required="">
                                    @Html.ValidationMessage("voornaam", new { @style = "color:red" })
                                    @* Veld om een voornaam in te vullen.*@
                                </div>
                                <div class="col-md-4 mb-3" style="">
                                    <label for="tussenvoegsel">Einfügung:</label>
                                    <input type="text" name="tussenvoegsel" class="form-control" id="infix" placeholder="" value="@Request["tussenvoegsel"]" required="">
                                    @* Veld om een (niet verplicht) tussenvoegsel in te vullen.*@
                                </div>
                                <div class="col-md-4 mb-3" style="">
                                    <label for="lastName">Nachname:</label>
                                    <input type="text" name="achternaam" class="form-control" id="lastName" placeholder="" value="@Request["achternaam"]" required="">
                                    @Html.ValidationMessage("achternaam", new { @style = "color:red" })
                                    @* Veld om een voornaam in te vullen.*@
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="email" contenteditable="false">Email:<span class="text-muted"></span></label>
                                <input type="email" name="email" value="@Request["email"]" class="form-control" id="email" placeholder="">
                                @Html.ValidationMessage("email", new { @style = "color:red" })
                                @* Veld om een email in te vullen.*@
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="col-md-12 mb-3">
                                        <label for="straat">Straße:</label>
                                        <input type="text" name="straat" class="form-control" id="straat" placeholder="" value="@Request["straat"]" required="">
                                        @Html.ValidationMessage("straat", new { @style = "color:red" })
                                        @* Veld om een straatnaam in te vullen.*@
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-12 mb-3">
                                        <label for="huisnummer">Hausnummer:</label>
                                        <input type="text" name="huisnummer" class="form-control" id="huisnummer" placeholder="" value="@Request["huisnummer"]" required="">
                                        @Html.ValidationMessage("huisnummer", new { @style = "color:red" })
                                        @* Veld om een huisnummer in te vullen.*@
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <div class="invalid-feedback" style=""></div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="col-md-12 mb-3">
                                                <label for="woonplaats">Wohnort:</label>
                                                <input type="text" name="woonplaats" class="form-control" id="woonplaats" placeholder="" value="@Request["woonplaats"]" required="">
                                                @Html.ValidationMessage("woonplaats", new { @style = "color:red" })
                                                @* Veld om een woonplaats in te vullen.*@
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-md-12 mb-3">
                                                <label for="postcode">Postleitzahl:</label>
                                                <input type="text" name="postcode" class="form-control" id="postcode" placeholder="" value="@Request["postcode"]" required="">
                                                @Html.ValidationMessage("postcode", new { @style = "color:red" })
                                                @* Veld om een postcode in te vullen.*@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="col-md-12 mb-3" style="">
                                                <label for="telefoonnummer">Telefonnummer:</label>
                                                <input type="text" name="telefoonnummer" class="form-control" id="telefoonnummer" placeholder="" value="@Request["telefoonnummer"]" required="">
                                                @Html.ValidationMessage("telefoonnummer", new { @style = "color:red" })
                                                @* Veld om een telefoonnummer in te vullen.*@
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-md-12 mb-3">
                                                <label for="land">Land:</label>
                                                <input type="text" name="land" class="form-control" id="land" placeholder="" value="@Request["land"]" required="">
                                                @Html.ValidationMessage("land", new { @style = "color:red" })
                                                @* Veld om een land in te vullen.*@
                                            </div>
                                        </div>
                                    </div>
                                        <div class="col-md-12">
                                            <div class="form-group row">
                                                <label class="col-2">Hinweis:</label>
                                                <div class="col-10"><textarea class="form-control" name="opmerking" value="@Request["opmerking"]" id="form35" rows="3" placeholder="allfällige Bemerkungen"></textarea></div>
                                                @* Een opmerkingenveld. *@
                                            </div>
                                        </div>
                                </div>
                            </div>
                            <button class="btn btn-warning btn-lg btn-block" name="SubmitButton" type="submit">Reservieren</button>
                            @* De verstuur knop die je naar de volgende pagina stuurt. *@
                        </div>
                    </div>
            </form>
        </div>
    </div>
    
</body>

</html>
